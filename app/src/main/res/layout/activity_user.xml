<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".user">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="104dp"
        android:text="Registrasi Disini"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/isi_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Anda"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_below="@id/judul"/>

    <EditText
        android:id="@+id/isi_tgllahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Lahir"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_below="@id/isi_nama"/>

    <EditText
        android:id="@+id/isi_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_below="@id/isi_tgllahir"/>

    <EditText
        android:id="@+id/isi_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_centerInParent="true"
        android:padding="16dp"
        android:layout_below="@id/isi_username"/>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/isi_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="DAFTAR"/>


</RelativeLayout>